{
	"version": "2.0.0",
	"type": "shell",
	"command": "${workspaceRoot}/compiler/pawncc.exe",
	"problemMatcher": "$pawncc",
	"presentation": {
		"reveal": "always",
		"focus": true,
		"panel": "dedicated",
		"clear": true
	},
	"tasks": [
		{
			"label": "Compilar servidor",
			"args": [
				"--%",
				"\"${workspaceFolder}\\source\\bare.pwn\"",
				"\"-icompiler\\include\"",
				"\"-icompiler\\include\\YSI\"",
				"\"-isource\"",
				"\"-ogamemodes\\hyaxe.amx\""
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "Preprocesar",
			"args": [
				"--%",
				"\"${workspaceFolder}\\source\\main.pwn\"",
				"\"-icompiler\\include\"",
				"\"-icompiler\\include\\YSI\"",
				"\"-isource\"",
				"\"-ogamemodes/hyaxe.lst\"",
				"\"-l\""
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Ensamblar",
			"args": [
				"\"source/main.pwn\"",
				"--%",
				"\"-icompiler/include\"",
				"\"-icompiler\\include\\YSI\"",
				"\"-isource\"",
				"\"-ogamemodes/hyaxe.asm\"",
				"\"-a\"",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Ensamblar archivo",
			"args": [
				"\"${relativeFile}\"",
				"\"-icompiler/include\"",
				"\"-icompiler\\include\\YSI\"",
				"\"-isource\"",
				"\"-o${fileDirname}\\${fileBasenameNoExtension}.asm\"",
				"\"-a\"",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Compilar archivo",
			"args": [
				"\"${relativeFile}\"",
				"\"-icompiler/include\"",
				"\"-icompiler\\include\\YSI\"",
				"\"-isource\"",
				"\"-o${fileDirname}\\${fileBasenameNoExtension}.amx\"",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}